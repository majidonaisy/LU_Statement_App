@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">

<div class="container my-5">
    <div class="row justify-content-center">
        <!-- Hero Section -->
        <div class="col-lg-8 text-center">
            <div class="card shadow-lg border-0 rounded-4 mb-5">
                <div class="card-body p-5">
                    <h1 class="fw-bold text-primary">Welcome to the Statement Application Portal</h1>
                    <p class="text-muted">Easily apply for your statements or view the status of your applications.</p>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="col-lg-6 text-center">
            <div class="d-grid gap-4">
                <a asp-page="/Apply" class="btn btn-lg btn-primary shadow-lg rounded-pill">
                    <i class="bi bi-file-earmark-plus me-2"></i> Apply for a Statement
                </a>
                <a asp-page="/AllStatements" class="btn btn-lg btn-outline-primary shadow-lg rounded-pill">
                    <i class="bi bi-card-list me-2"></i> View Your Applications
                </a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
