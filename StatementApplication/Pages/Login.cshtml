@page
@model StatementApplication.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0" style="max-width: 400px; width: 100%; border-radius: 20px;">
        <div class="card-body p-5">
            <!-- Logo or Title -->
            <h2 class="text-center text-primary fw-bold mb-4">Login</h2>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            <!-- Login Form -->
            <form method="post">
                <!-- Email Field -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="Email" id="email" class="form-control form-control-lg" placeholder="Enter your email" required />
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="Password" id="password" class="form-control form-control-lg" placeholder="Enter your password" required />
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Login</button>
                </div>
            </form>

            <!-- Additional Links -->
            <div class="mt-4 text-center">
                <a href="/register" class="text-decoration-none text-primary">Don't have an account? Register</a><br />
                <a href="/forgotemail" class="text-decoration-none text-primary">Forgot Email?</a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
