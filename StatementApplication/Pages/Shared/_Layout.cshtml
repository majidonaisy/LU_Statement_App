<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Statement Application</title>

    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container">
                <!-- Brand Logo -->
                <a class="navbar-brand fw-bold" href="/">

                    Faculty of Science Statement Portal
                </a>

                <!-- Navbar Toggle Button for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link" href="/apply">Apply</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/allstatements">Track Applications</a>
                        </li>
                    </ul>

                    <!-- Logout Button -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form id="logoutForm" class="d-inline">
                            <button id="logoutButton" class="btn btn-danger ms-3">Logout</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Section -->
    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>

    <!-- Logout Script -->
    <script>
        document.getElementById('logoutButton')?.addEventListener('click', async function (e) {
            e.preventDefault(); // Prevent form submission
            const response = await fetch('/api/logout', {
                method: 'POST',
                credentials: 'include'
            });

            if (response.ok) {

                window.location.href = '/login';
            } else {
                alert('Logout failed. Please try again.');
            }
        });
    </script>
</body>
</html>
